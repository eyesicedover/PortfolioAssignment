@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PortfolioAssignment.ViewModels

@model RegisterViewModel

<h2>Register New Administrator</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-group" }))
{
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user => user.Email, new { @class = "form-control" })

    @Html.LabelFor(user => user.Password)
    @Html.PasswordFor(user => user.Password, new { @class = "form-control" })

    @Html.LabelFor(user => user.ConfirmPassword)
    @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "form-control" })
    <br />
    <input class="btn btn-primary" type="submit" value="Register" />
}